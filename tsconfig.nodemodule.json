{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "skipLibCheck": true,

    /* Bundling */
    "outDir": "lib",
    "declaration": true,
    "esModuleInterop": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/**/*.test.ts", "src/web/*", "node_modules/@types/react/*"]
}
